<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartScreen">

    <ScrollView
        android:layout_width="291dp"
        android:layout_height="480dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="395dp"
            android:layout_height="203dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="520dp">

            <Button
                android:id="@+id/buttonDrawNumber"
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:text="Draw a number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"></LinearLayout>

            <Button
                android:id="@+id/butInd"
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:text="Individual Draw" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"></LinearLayout>

            <Button
                android:id="@+id/butMult"
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:text="Team Draw" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"></LinearLayout>

            <Button
                android:id="@+id/butSavedParticipants"
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:text="Saved Participantes" />

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>