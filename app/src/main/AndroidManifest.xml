<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bfs.DrawingTool">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.bfs.DrawingTool.ResultNumberDraw"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.example.bfs.DrawingTool.OptionsDrawANumber"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.bfs.DrawingTool.UniqueResult"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.bfs.DrawingTool.ShowSavedParticipants"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.bfs.DrawingTool.StartScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.bfs.DrawingTool.AddParticipants"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.bfs.DrawingTool.ResultIndividualDraw"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.bfs.DrawingTool.MultipleTeams"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.bfs.DrawingTool.Screen"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.bfs.DrawingTool.ResultMultipleDraw"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.bfs.DrawingTool.OptionsMultipleDraw"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.bfs.DrawingTool.IndividualDrawChooseType"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
    </application>

</manifest>